<h1 class="mb-3"><%= @list.name.capitalize %></h1>
<%= link_to '+ Add movie', new_list_bookmark_path(@list), class: 'btn btn-primary mb-4' %>
<div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <img src=<%= bookmark.movie.poster_url %> />
      <div class="card-trip-infos">
        <div>
          <h2><%= bookmark.movie.title %> <p class="font-weight-light"><%= bookmark.movie.rating %> <i class="fa-solid fa-star"></i></h2>
          <p><%= bookmark.movie.overview %></p>
          <p><strong>"<%= bookmark.comment %>"</strong></p>
        </div>
        <h2 class="card-trip-pricing"><%= link_to raw("<i class='fa-solid fa-trash-can'></i>"), bookmark_path(bookmark),
          data: {
            turbo_method: :delete,
            turbo_confirm: 'Are you sure?'
          } %></h2>
      </div>
    </div>
  <% end %>
</div>
